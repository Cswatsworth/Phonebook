<form action="/phonebook" method="post">

	<p>First Name:<input type="text" name="first_name"></p>
	
	<p>Last Name:<input type="text" name="last_name"></p>
	
	<p>Street Address:<input type="text" name="street_address"></p>
	
	<p>City:<input type="text" name="city"></p>
	
	<p>State:<input type="text" name="state"></p>
	
	<p>Zip:<input type="text" name="zip"></p>
	
	<p>Cell Phone:<input type="text" name="cell_phone"></p>
	
	<p>Home Phone:<input type="text" name="home_phone"></p>
	
	<input type="submit" value="Submit">
	</form>
	<p><table class="table"></p>
       <thead>
           <tr>
               <th>First Name</th>
               <th>Last Name</th>
               <th>Street Address</th>
               <th>City</th>
               <th>State</th>
               <th>Zip</th>
               <th>Cell Number</th>
               <th>Home Number</th>
         
           </tr>
       </thead>
       <tbody>
           <%phonebook.each do |contacts|%>
           <tr>
               <td><%=contacts["first_name"] %></td>
               <td><%=contacts ["last_name"] %></td>
                <td><%=contacts ["street_address"] %></td>
               <td><%=contacts ["city"] %></td>
               <td><%=contacts ["state"] %></td>
                <td><%=contacts ["zip"] %></td>
               <td><%=contacts ["cell_phone"] %></td>
               <td><%=contacts ["home_phone"] %></td>
           </tr>
           <%end%>
       </tbody>
   </table>

  <form action= "/update_column" method= "post">
  		
  		<select name="table_column">


  	<option value='col_first_name'>First Name</option>
		<option value='col_last_name'>Last Name</option>
		<option value='col_address'>Street Address</option>
		<option value='col_city'>City</option>
		<option value='col_state'>State</option>
		<option value='col_zip'>Zip</option>
		<option value='col_cell'>Cell Number</option>
		<option value='col_home'>Home Number</option>
	</select>
	<br>


	  New Input: <input type="text" name="new_data"><br>
	  Current Input: <input type="text" name="old_data"><br>
	   <input type="submit" value="Update">
	   </form>

   <form action='/delete_all' method='post'>
   	<input type = "submit" value = "Delete Data">
   </form>




